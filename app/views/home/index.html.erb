<% provide :head_tags do %>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        initMap()
      });
    </script>
<% end %>

<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<h2>Liste des points de distribution</h2>

<ul id="locations-list">
  <% @locations.each do |location| %>
    <%= tag.li "#{location.name}: #{location.address}", data: { markercontent: "<strong>#{location.name}</strong><br>#{location.address}", lat: location.latitude, lon: location.longitude } %>
  <% end %>
</ul>

<div id="map"></div>
