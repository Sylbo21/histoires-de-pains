
<div class="container-fluid bg-light text-center p-5 mb-5">
  <h1>Se connecter</h1>
</div>

<div class="container">

  <!-- Remplacer le lien par path helper -->
  <p class="mb-3">Je n'ai pas encore de compte <a href="#">Cr√©er un compte</a></p>

  <% if(@user.errors.any?) %>
    <div class="alert alert-warning" role="alert">
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>.<br/>
      <% end %>
    </div>
  <% end %>

  <%= form_tag(sessions_path) do %>

    <div class="form-group mb-3">
      <%= label_tag(:email, nil) %>
      <%= email_field_tag(:email, nil, class: 'form-control', required: true) %>
    </div>

    <div class="form-group mb-3">
      <%= label_tag(:password, nil) %>
      <%= password_field_tag(:password, nil, class: 'form-control', required: true) %>
    </div>

    <%= submit_tag('Se connecter', class: 'btn btn-primary') %>

  <% end %>

</div>
