
<div class="container-fluid bg-light text-center p-5 mb-5">
  <h1>Se connecter</h1>
</div>

<div class="container">

  <p class="mb-3">
    Je n'ai pas encore de compte.
    <%= link_to(' CrÃ©er un compte', new_user_path) %>
  </p>

  <% if(flash.any?) %>
    <% flash.each do |name, message| %>
      <div class="alert alert-warning <%= name %>" role="alert"><%= message %></div>
    <% end %>
  <% end %>

  <%= form_tag(sessions_path, novalidate: "novalidate") do %> <!-- to test server-side error messages, add this inside (): ", novalidate: "novalidate"" -->

    <div class="form-group mb-3">
      <%= label_tag(:email, nil) %>
      <%= email_field_tag(:email, nil, class: 'form-control', required: true) %>
    </div>

    <div class="form-group mb-3">
      <%= label_tag(:password, nil) %>
      <%= password_field_tag(:password, nil, class: 'form-control', required: true) %>
    </div>

    <%= submit_tag('Se connecter', class: 'btn btn-primary') %>

  <% end %>

</div>
